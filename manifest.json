{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.0",
  "description": "Allows downloading YouTube videos locally to your computer.",
  "permissions": [
    "downloads",
    "declarativeContent",
    "scripting",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?v=*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Download YouTube Video",
    "default_popup": "popup.html"
  }
} 